from flask import Flask, render_template, request

app = Flask(__name__)

@app.route("/")
def home():
    return render_template("index.html")

@app.route("/run", methods=["POST"])
def run():
    token = request.form.get("token")
    return f"Token mila: {token}"

if __name__ == "__main__":
    app.run(debug=True)
